{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 Debug Backend Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/server.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "mirabel:*"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },

    {
      "name": "🌐 Debug GraphQL Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/server.js",
      "env": {
        "NODE_ENV": "development",
        "GRAPHQL_DEBUG": "true"
      },
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },

    {
      "name": "🔧 Debug Prisma Generation",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/prisma",
      "args": ["generate"],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    }
  ],

  "compounds": [
    {
      "name": "🚀 Debug Full Stack",
      "configurations": [
        "🚀 Debug Backend Server"
      ],
      "stopAll": true
    }
  ]
}