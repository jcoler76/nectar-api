# License Server Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=6000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://license_user:license_password@localhost:5433/nectar_licenses

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-license-server
JWT_EXPIRES_IN=24h
LICENSE_JWT_SECRET=your-license-validation-jwt-secret
LICENSE_JWT_EXPIRES_IN=365d

# Encryption Keys
LICENSE_ENCRYPTION_KEY=your-32-character-encryption-key-here
LICENSE_SIGNING_KEY=your-license-signing-private-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# License Validation
LICENSE_GRACE_PERIOD_DAYS=7
LICENSE_CHECK_INTERVAL_HOURS=24
OFFLINE_MODE_MAX_DAYS=30

# Webhook Configuration
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
WEBHOOK_ENDPOINTS=http://localhost:3001/webhooks/license

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
METRICS_ENDPOINT_ENABLED=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:4000,http://localhost:5000
ADMIN_API_KEY=your-admin-api-key-for-internal-calls

# Customer App Integration
CUSTOMER_APP_VALIDATION_ENDPOINT=http://localhost:3001/api/license/validate
CLOUD_API_BASE_URL=https://api.nectar.com

# Email Notifications
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=licenses@nectar.com