NODE_ENV=development
PORT=3001
# Nectar Studio Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# BASIC APPLICATION CONFIGURATION
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection string - Replace with your actual MongoDB URI
MONGODB_URI=mongodb://username:password@localhost:27017/mirabel_db?retryWrites=true&w=majority

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret - MUST be a strong, unique secret in production
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Encryption key for sensitive data. Any string can be used, it will be hashed to a secure key.
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-here-change-this

# Token rotation - set to 'true' for enhanced security (blacklists old refresh tokens)
REFRESH_TOKEN_ROTATION=true

# ===========================================
# REDIS CONFIGURATION (Production)
# ===========================================
# Redis host (leave empty to disable Redis and use in-memory fallback)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis connection settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# Authentication rate limiting
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=60000

# API rate limiting
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================
# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP settings for sending emails
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password-or-app-specific-password

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# SESSION CONFIGURATION
# ===========================================
# Session timeout in milliseconds (default: 30 minutes)
SESSION_TIMEOUT=1800000

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ===========================================
# MCP (Model Context Protocol) CONFIGURATION
# ===========================================
# MCP API Configuration
MCP_API_ENDPOINT=https://api.mcp.example.com
MCP_DEVELOPER_KEY=your-mcp-developer-key-here

# ===========================================
# AWS S3 CONFIGURATION
# ===========================================
# AWS S3 settings for bucket monitoring and file operations
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# S3 bucket monitoring settings
S3_POLLING_INTERVAL_MS=300000

# ===========================================
# EXTERNAL API KEYS (if needed)
# ===========================================
# Add any additional API keys or configuration here
# THIRD_PARTY_API_KEY=your-api-key-here

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific features
ENABLE_2FA=true
ENABLE_AUDIT_LOGGING=true
ENABLE_API_DOCS=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================
# Public URL of your application
PUBLIC_URL=http://localhost:3000
PUBLIC_DIR=../build

# Admin emails (comma-separated list of emails that should have admin privileges)
# Example: admin@example.com,superadmin@example.com
ADMIN_EMAILS=admin@example.com

# ===========================================
# STRIPE BILLING (Marketing Checkout)
# ===========================================
# Secret key for server-side Stripe API
STRIPE_SECRET_KEY=sk_test_xxx
# Webhook signing secret from your Stripe dashboard
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Optional: override success/cancel redirect URLs for Checkout
CHECKOUT_SUCCESS_URL=http://localhost:3000/checkout/success?session_id={CHECKOUT_SESSION_ID}
CHECKOUT_CANCEL_URL=http://localhost:3000/pricing

# Optional CAPTCHA verification for public endpoints (choose one provider)
#CAPTCHA_PROVIDER=recaptcha
#RECAPTCHA_SECRET=your-recaptcha-secret
# Or hCaptcha
#CAPTCHA_PROVIDER=hcaptcha
#HCAPTCHA_SECRET=your-hcaptcha-secret
