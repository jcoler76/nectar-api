# Nectar API Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# BASIC APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGODB_URI=mongodb://localhost:27017/nectar-api

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret - MUST be a strong, unique secret in production
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production

# Encryption key for sensitive data. Any string can be used, it will be hashed to a secure key.
ENCRYPTION_KEY=your-strong-and-secret-encryption-key-here

# Token rotation - set to 'true' for enhanced security (blacklists old refresh tokens)
REFRESH_TOKEN_ROTATION=false

# ===========================================
# REDIS CONFIGURATION (Production)
# ===========================================
# Redis host (leave empty to disable Redis and use in-memory fallback)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis connection settings
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================
# Authentication rate limiting
AUTH_RATE_LIMIT_MAX=10
AUTH_RATE_LIMIT_WINDOW_MS=60000

# Failed login attempt limits
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MS=900000

# API rate limiting
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:8000,https://your-production-domain.com

# ===========================================
# API KEY HEADER CONFIGURATION
# ===========================================
# Primary header name for API key authentication.
# Keep default and map vanity headers at gateway for simplicity.
API_AUTH_HEADER=x-nectarstudio-api-key
# Optional comma-separated list of additional header names accepted as aliases.
# Example: x-theirco-api-key,x-legacy-api-key
API_HEADER_ALIASES=

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Nectar Studio API configuration
MIRABEL_CONNECT_API_URL=https://mirabelconnect.mirabeltechnologies.com
MIRABEL_CONNECT_API_KEY=your-mirabel-connect-api-key

# OpenAI configuration (if using AI features)
OPENAI_API_KEY=your-openai-api-key

# Email (SMTP) configuration for sending OTPs and notifications
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM="Nectar Studio" <no-reply@example.com>

# SMS provider configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ===========================================
# SECURITY MONITORING
# ===========================================
# Enable security event monitoring
SECURITY_MONITORING_ENABLED=true

# Security alert thresholds
SUSPICIOUS_ACTIVITY_THRESHOLD=10
SECURITY_ALERT_EMAIL=admin@yourdomain.com

# ===========================================
# SSL/TLS CONFIGURATION (Production)
# ===========================================
# SSL certificate paths (for HTTPS in production)
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# Force HTTPS in production
FORCE_HTTPS=false

# ===========================================
# SESSION CONFIGURATION
# ===========================================
# Session secret for additional security
SESSION_SECRET=your-session-secret-here

# Cookie security settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# BACKUP AND MAINTENANCE
# ===========================================
# Automatic security audit schedule (cron format)
SECURITY_AUDIT_SCHEDULE=0 0 * * *

# Database backup settings
DB_BACKUP_ENABLED=false
DB_BACKUP_SCHEDULE=0 2 * * *
DB_BACKUP_RETENTION_DAYS=30 
